{
  "extends" : [
    "tslint:recommended"
  ],
  "rules": {
    "forin": false,
    "interface-name": [true, "never-prefix"],
    "no-console": [false],
    "no-namespace": [false],
    "member-ordering": [false],
    "semicolon": [true, "ignore-bound-class-methods"],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "prefer-const": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
